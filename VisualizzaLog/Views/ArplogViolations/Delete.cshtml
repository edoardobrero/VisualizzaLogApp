@model VisualizzaLog.Models.ArplogViolation

@{
    ViewData["Title"] = "Delete";
}

<h1>Elimina</h1>

<h3>Sei sicuro di voler eliminare questa violazione?</h3>
<div>
    <h4>Violazione mapping MAC</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Arplog)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Arplog.Address)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Arplog.MacAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rule)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rule.Contenuto)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Elimina" class="btn btn-danger" />
    </form>
</div>
